<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    <add key="github" value="https://nuget.pkg.github.com/${GITHUB_REPOSITORY_OWNER}/index.json" />  <!-- Updated to use dynamic repository owner -->
  </packageSources>
  <packageSourceCredentials>
    <github>
      <add key="Username" value="GITHUB_ACTOR" />
      <add key="ClearTextPassword" value="%NUGET_AUTH_TOKEN%" />  <!-- Ensure token is used for authentication -->
    </github>
  </packageSourceCredentials>
</configuration>